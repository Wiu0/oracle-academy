import java.util.Scanner;

public class VendaHortifruti {

	
	public static void main(String[] args) {
		int quantidadeMacas = 10;
		Scanner sc = new Scanner(System.in);
		System.out.println("Bom dia, bem vindx a venda Horti Family");
		System.out.println("Voce deseja quantas maçãs?");
		int quantidadeMacasCompra = sc.nextInt();
		
		if(quantidadeMacasCompra > quantidadeMacas) {
			System.out.println("Sinto muito, mas nós só temos " + quantidadeMacas);
		}else {
			quantidadeMacas -= quantidadeMacasCompra;
			System.out.println("O valor é " + quantidadeMacas * 5);
			System.out.println("Obrigado pela compra!");
		}
		
		
	}
}

