package br.com.oracle.lesson2;

import java.util.Scanner;

/**
 * Classe Driver. Responsabilidade da classe é invocar a classe de objeto "Soma"
 * – Instâncias de objetos de uma classe de objeto
 * – Variáveis
 * – Loops, instruções condicionais (if-else)
 * – Outra lógica de programação
 * – Também pode conter outros métodos estáticos
 *@author wiu
 *@since 20181206
 * */
public class SomaTeste {

	public static void main(String[] args) {
		Soma s = new Soma();
		System.out.println("Entre com o numero 1 e numero 2. Exe.:\n2 6\nSeparando os numeros por \" \"");
		System.out.println(s.calcular(getValorUsuario(), getValorUsuario()));
	}

	private static double getValorUsuario() {
		int i = 0;
		Scanner sc = new Scanner(System.in);
		i = sc.nextInt();
		sc.close();
		return i;
	}
}
